<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="eud.sm.repository.ProductRepository">

    <select id="select" parameterType="String" resultType="Phone">
        SELECT * FROM cust WHERE phone_id=#{custId}
    </select>
    <select id="selectAll" resultType="Phone">
        SELECT * FROM phone
    </select>
    <insert id="insert" parameterType="Phone">
        INSERT INTO cust VALUES (#{phoneId},#{phoneCompany},#{phoneName},#{phonePrice}, NOW(), NOW())
    </insert>
<!--    <update id="update" parameterType="Phone">-->
<!--        UPDATE cust SET phone_name=#{phoneName}, cust_update=NOW() WHERE cust_id=#{custId}-->
<!--    </update>-->
    <delete id="delete" parameterType="String">
        DELETE FROM cust WHERE phone_id=#{phoneId}
    </delete>

</mapper>